generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  firstName    String
  middleName   String?
  lastName     String
  affiliation  String?
  email        String    @unique
  password     String
  role         Role      @default(AUTHOR)
  createdAt    DateTime  @default(now())

  // Relations
  papers       Paper[]   @relation("AuthorPapers") // Papers submitted by this user
  reviews      Review[]  @relation("ReviewerReviews")
  feedbacks    Feedback[]
  assignments  ReviewerAssignment[]
  loginLogs    LoginLog[]
}

enum Role {
  ADMIN
  AUTHOR
  REVIEWER
}

model Paper {
  id            Int         @id @default(autoincrement())
  title         String
  abstract      String
  fileUrl       String
  keywords      String?
  topicArea     String?
  status        PaperStatus @default(PENDING_APPROVAL)
  submittedAt   DateTime    @default(now())

  authorId      Int
  author        User        @relation("AuthorPapers", fields: [authorId], references: [id]) // The user who submitted the paper

  // relations
  authors       Author[] // <-- Renamed from coAuthors
  reviews       Review[]
  feedbacks     Feedback[]
  assignments   ReviewerAssignment[]
}

enum PaperStatus {
  PENDING_APPROVAL    // submitted, waiting for admin approval
  PENDING_REVIEW      // approved by admin but not yet reviewed
  UNDER_REVIEW        // assigned to reviewers
  REVISION_REQUIRED   // reviewer requested changes
  RESUBMITTED
  ACCEPTED
  REJECTED
}

// New Enum for Author Salutations
enum Salutation {
  Mr
  Ms
  Mrs
  Dr
  Prof
  Mx // Added as a gender-neutral option
}

// Model Renamed from CoAuthor to Author
model Author {
  id        Int     @id @default(autoincrement())
  paperId   Int

  salutation       Salutation? // <-- ADDED: For Mr, Ms, etc.
  name             String
  email            String?
  institute        String?     // <-- RENAMED: from 'affiliation' to 'institute'
  isCorresponding Boolean @default(false) // <-- ADDED: To mark corresponding authors

  paper     Paper   @relation(fields: [paperId], references: [id])
}

model ReviewerAssignment {
  id           Int      @id @default(autoincrement())
  reviewerId   Int
  paperId      Int

  reviewer     User     @relation(fields: [reviewerId], references: [id])
  paper        Paper    @relation(fields: [paperId], references: [id])

  assignedAt   DateTime @default(now())

  @@unique([reviewerId, paperId])
}

model Review {
  id             Int            @id @default(autoincrement())
  paperId        Int
  reviewerId     Int
  comments       String
  recommendation ReviewDecision
  reviewedAt     DateTime       @default(now())

  paper          Paper          @relation(fields: [paperId], references: [id])
  reviewer       User           @relation("ReviewerReviews", fields: [reviewerId], references: [id])

  @@unique([paperId, reviewerId])
}

enum ReviewDecision {
  ACCEPT
  REJECT
  MINOR_REVISION
  MAJOR_REVISION
}

model Feedback {
  id         Int      @id @default(autoincrement())
  paperId    Int
  senderId   Int
  message    String
  sentAt     DateTime @default(now())

  paper      Paper    @relation(fields: [paperId], references: [id])
  sender     User     @relation(fields: [senderId], references: [id])
}

model LoginLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  ipAddress String?  // Good for security (e.g., "New login from IP x.x.x.x")
  userAgent String?  // Good for identifying devices (e.g., "Chrome on Windows")
  loginAt   DateTime @default(now())
}